@model AdminModel

@{
    ViewData["Title"] = "Confirmação apagar o usuário admin";
}

<div class="text-center">
    <h2>Deseja realmente apagar o usuário (@Model.Nome)?</h2>
</div>

<a role="button" class="btn btn-primary" asp-controller="Admin" asp-action="Index">Cancelar</a>
<a role="button" class="btn btn-danger" asp-controller="Admin" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar</a>