@model MotoModel

@{
    ViewData["Title"] = "Editar Moto";
}

<div class="text-center">

    <h1 class="display-4">Editar moto</h1>

</div>

<form asp-controller="Moto" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id">

    <div class="mb-3">
        <label for="ano" class="form-label">Ano</label>
        <input type="number" class="form-control" id="ano" asp-for="Ano" placeholder="Digite o ano da moto...">
        @Html.ValidationMessageFor(x => x.Ano)
    </div>

    <div class="form-group">
        <label for="modelo" class="form-label">Modelo</label>
        <select asp-for="Modelo" class="form-control">
            <option value="@ModeloEnum.Economica">Econômica</option>
            <option value="@ModeloEnum.Comfort">Comfort</option>
        </select>
        @Html.ValidationMessageFor(x => x.Modelo)
    </div>

    <div class="mb-3">
        <label for="placa" class="form-label">Placa</label>
        <input type="text" class="form-control" id="placa" asp-for="Placa" placeholder="Digite a placa da moto...">
        @Html.ValidationMessageFor(x => x.Placa)
    </div>

    <button type="submit" class="btn btn-primary">Editar</button>
</form>