@model MotoModel

@{
    ViewData["Title"] = "Confirmação apagar o usuário";
}

<div class="text-center">
    <h2>Deseja realmente apagar a moto (@Model.Placa)?</h2>
</div>

<a role="button" class="btn btn-primary" asp-controller="Moto" asp-action="Index">Cancelar</a>
<a role="button" class="btn btn-danger" asp-controller="Moto" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar</a>