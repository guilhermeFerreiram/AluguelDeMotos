@model EntregadorModel

@{
    ViewData["Title"] = "Confirmação apagar o usuário entregador";
}

<div class="text-center">
    <h2>Deseja realmente apagar o usuário (@Model.Nome)?</h2>
</div>

<a role="button" class="btn btn-primary" asp-controller="Entregador" asp-action="Index">Cancelar</a>
<a role="button" class="btn btn-danger" asp-controller="Entregador" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar</a>